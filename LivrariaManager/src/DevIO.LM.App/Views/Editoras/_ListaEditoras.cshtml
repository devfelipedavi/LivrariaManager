@model IEnumerable<DevIO.LM.App.ViewModels.EditoraViewModel>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th>

            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td class="text-right">
                <a class="btn btn-warning" asp-controller="Editoras" asp-action="Details" asp-route-id="@item.Id"><spam class="fa fa-search"></spam>Detalhes</a>
                <a class="btn btn-info" asp-controller="Editoras" asp-action="Edit" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam> Editar</a>
                <a class="btn btn-danger" asp-controller="Editoras" asp-action="Delete" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam> Excluir</a>
        </td>
        </tr>
        }
    </tbody>
</table>

